<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/mainlayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<ImageView
	android:id="@+id/randomcard"
	android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:gravity="center"
    android:layout_gravity="center"
    /> 
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/maininnerlayout"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >    
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:visibility="invisible"
    android:paddingBottom="170px"
    />    
<DatePicker 
    android:id="@+id/birthdatepicker"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:prompt="@string/birthdate_prompt"
    />
<Spinner 
    android:id="@+id/statusspinner"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:prompt="@string/status_prompt"
    />
<TextView
	android:id="@+id/questionprompt"  
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="#000000"
    android:textColor="#FFFFFF"
    android:paddingBottom="20px"
    android:text="@string/questionprompt"
    /> 
<Button 
	android:id ="@+id/initbutton"
	android:gravity="center"
    android:layout_gravity="center"
	android:text="begin"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	/>
</LinearLayout>
</RelativeLayout>
